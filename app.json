  "flow": {
    "triggers": [
      {
      "id": "switch2_turned_on",
      "title": {
        "en": "Second Switch Turned On"
      },
      "args": [
        {
          "type": "device",
          "name": "device",
          "filter": "driver_id=S2_5502||S2R_5602"
        }
      ]
    },
    {
      "id": "switch2_turned_off",
      "title": {
        "en": "Second Switch Turned Off"
      },
      "args": [
        {
          "type": "device",
          "name": "device",
          "filter": "driver_id=S2_5502||S2R_5602"
        }
      ]
    }
  ],
  "conditions": [
    {
      "id": "switch2_is_on",
      "title": {
        "en": "Second switch is !{{on|off}}"
      },
      "args": [
        {
          "type": "device",
          "name": "device",
          "filter": "driver_id=S2_5502||S2R_5602"
        }
      ]
    }
  ],
  "actions":  [
      {
      "id": "turn_on_switch2",
      "title": {
        "en": "Turn Second Switch On"
     },
    "args": [
